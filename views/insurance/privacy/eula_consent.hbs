<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>{{pageTitle}}</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
<link rel="manifest" href="/favicon/site.webmanifest">
<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#7a6f6f">
<link rel="shortcut icon" href="/f8avicon/favicon.ico">
<meta name="msapplication-TileColor" content="#ffffff">
<meta name="msapplication-config" content="/favicon/browserconfig.xml">
<meta name="theme-color" content="#ffffff">

<link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
<link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
<link href="/stylesheets/social.css" rel="stylesheet" type="text/css">
<link href="/stylesheets/overrides.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.16.2/build/styles/default.min.css">
<script src="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.16.2/build/highlight.min.js"></script>
</head>
<body class="insurance-page gary-bg">
  <div class="overlay-background">

    <div class="overlay-content login-wrap" style="max-width:750px !important;">

        <div class="overlay-logo">
        	<a href="/"><img src="/images/insurance_logo.svg"></a>
        </div>

        <h1>{{consentTitle}}</h1>

      <form action="{{actionHome}}" method="post">
      <p>{{pageDescription}}</p>
      {{#if error}}
      <div class="bb-alert bb-warning">
       <span class="bb-closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
       {{errorMessage}}
      </div>
      {{/if}}
      <div class="formRow">
				<p>{{agreementTitle}}</p>
				<iframe width="100%" height="150px" src="{{refLink}}"></iframe>
			</div>
      <div class="">
            <span style="display:inline-block;margin-top:1rem;width:100%">
              <input type="checkbox" id="assertTerms" name="assertTerms" value="true"
                {{#if assertUIDefault}} checked {{/if}}>
              <label for="assertTerms">I accept the terms of service.</label><br>
            </span>
            <input type="hidden" name="accessTypeID" value="{{accessTypeId}}"/>
			</div>
			<div class="formRow-bottom clearfix">
				<div class="clear"></div>
				<input class="input-cta" type="submit" value="Submit">
        <div class="clear"></div>
			</div>

        </form>

    </div>

    </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.2/jquery.min.js"></script>
  <script src="/javascripts/init.js"></script>
  <!--Footer-->
  <div class="footer">
    <div class="container">
      TrustMeInsurance is a demonstration application with no affiliation to any existing organization. This application is for demonstration purposes only.
    </div>
  </div>
  </body>
  </html>
